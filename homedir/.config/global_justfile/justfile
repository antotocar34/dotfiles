mod gcp
mod uv

import? "./tmp.just"

_default:
  @just -f {{justfile_directory()}}/justfile --choose

[no-cd]
commit_ai:
  git commit -m "$(git diff --staged | ask -n 'write me a one sentence commit message for these changes')"

[no-cd]
force_amend:
  git commit --amend --no-edit & git push -uf

s:
  just -f ~/.config/dotfiles/justfile switch

test:
  echo "test"
